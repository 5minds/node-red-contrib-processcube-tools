{
    "name": "@5minds/node-red-contrib-processcube-tools",
    "version": "1.0.1",
    "license": "MIT",
    "description": "Node-RED tools nodes for ProcessCube",
    "scripts": {
        "lint": "prettier --write --config ./.prettierrc.json \"**/*.{html,js}\"",
        "test:unit": "mocha test/unit/**/*.test.js --timeout 10000",
        "test:integration": "mocha test/integration/**/*.test.js --timeout 10000",
        "test": "npm run test:unit && npm run test:integration",
        "test:debug": "mocha test/unit/**/*.test.js test/integration/**/*.test.js --timeout 0 --reporter spec"
    },
    "authors": [
        {
            "name": "Martin Moellenbeck",
            "email": "Martin.Moellenbeck@5Minds.de"
        },
        {
            "name": "Robin Lenz",
            "email": "Robin.Lenz@5Minds.de"
        },
        {
            "name": "Diana Stefan",
            "email": "Diana.Stefan@5Minds.de"
        }
    ],
    "repository": {
        "type": "git",
        "url": "https://github.com/5minds/node-red-contrib-processcube-tools"
    },
    "bugs": {
        "url": "https://github.com/5minds/node-red-contrib-processcube-tools/issues",
        "email": "processcube@5minds.de"
    },
    "engines": {
        "node": ">=14",
        "npm": ">=8.0.0"
    },
    "node-red": {
        "version": ">=3.1.9",
        "nodes": {
            "EmailReceiver": "email-receiver/email-receiver.js",
            "HtmlToText": "processcube-html-to-text.js"
        },
        "examples": "examples"
    },
    "dependencies": {
        "html-to-text": "^9.0.5",
        "mailparser": "^3.6.8",
        "node-imap": "^0.9.6",
        "utf7": "^1.0.2"
    },
    "devDependencies": {
        "chai": "^4.3.4",
        "mocha": "^11.7.2",
        "node-red": "^4.1.0",
        "node-red-node-test-helper": "^0.3.5",
        "should": "^13.2.3",
        "sinon": "^11.1.2"
    },
    "overrides": {
        "semver": ">=7.5.2"
    },
    "keywords": [
        "node-red",
        "processcube",
        "tools",
        "low-code"
    ]
}
