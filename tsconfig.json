{
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "dist",
    //set to commonjs and node for node-red compatibility
    "module": "commonjs",
    "moduleResolution": "node",
    // set to es2021 for node-red compatibility
    "target": "es2021",
    "lib": ["es2021"],
    "declaration": true,
    "skipLibCheck": true,
    "declarationDir": "dist",
    "sourceMap": true,
    "esModuleInterop": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src"],
  "exclude": ["**/test"],
  "files": [
    "src/types.d.ts"
  ]
}